<div class="row">
    <div class="col-sm-6">
        <div class="baby-info">
            <div class="row">
                <div class="col-sm-10">
                    <h2>{{baby.name}}</h2>
                    <h3>Swoleness: <span id="baby-swoleness">{{roundNum baby.swoleness}}</span></h3>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    Muscle Fatigue: {{roundNum baby.muscleAttackFatigue}}
                    <br>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="{{babyMusclePercentage}}" aria-valuemin="0" aria-valuemax="1" style="width: {{babyMusclePercentage}}%">
                            <span class="sr-only">45% Complete</span>
                        </div>
                    </div>
                    <button class="btn btn-success col-sm-12" {{action 'battleClick' 'muscle'}}>Muscle Attack</button>
                </div>
                <div class="col-sm-4">
                    Charisma Fatigue: {{roundNum baby.charismaAttackFatigue}}
                    <br>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="{{babyCharismaPercentage}}" aria-valuemin="0" aria-valuemax="1" style="width: {{babyCharismaPercentage}}%">
                            <span class="sr-only">45% Complete</span>
                        </div>
                    </div>
                    <button class="btn btn-success col-sm-12" {{action 'battleClick' 'charisma'}}>Charisma Attack</button>
                </div>
                <div class="col-sm-4">
                    Magic Fatigue: {{roundNum baby.magicAttackFatigue}}
                    <br>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="{{babyMagicPercentage}}" aria-valuemin="0" aria-valuemax="1" style="width: {{babyMagicPercentage}}%">
                            <span class="sr-only">45% Complete</span>
                        </div>
                    </div>
                    <button class="btn btn-success col-sm-12" {{action 'battleClick' 'magic'}}>Magic Attack</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="baby-info">
            <div class="row">
                <div class="col-sm-10">
                    <h2>{{opponent.name}}</h2>
                    <h3>Swoleness: <span id="opponent-swoleness">{{opponent.swoleness}}</span></h3>
                </div>
            </div>
            <div class="row">
            </div>
        </div>
    </div>
</div>