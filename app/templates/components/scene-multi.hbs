<div class="col-xs-3"></div>
<div class="col-xs-6">
    <h3>{{{scene.title}}}</h3>
    {{{text}}}
    <br/><br/>
    {{#unless isSecondScreen}}
        {{#each scene.options as |option|}}
            <button {{action 'selectChoice' option}} class="btn btn-block {{option.btnColor}}">
                {{option.text}}
            </button>
        {{/each}}
    {{else}}
        <div class="text-center">
            <button {{action 'onClickNext'}} class="btn btn-primary">Next</button>
        </div>
    {{/unless}}
</div>
<div class="col-xs-3"></div>
